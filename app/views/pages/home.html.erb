<div class='container'>
  <h1>Welcome to Gasho</h1>
  <p>*search bar goes here*</p>
  <h3>Special Sport routines</h3>
  <div class="owl-carousel">
    <% @sports.each do |s| %>
      <div class='sport-card card'>
        <div><%= s.name %></div>
        <p>Lorem ipsum blablablablab</p>
        <%= link_to 'VIEW ROUTINES', sport_path(s), class:'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <h3>My routines</h3>
  <% if @myroutines %>
    <div class="owl-carousel">
      <% @myroutines.each do |s| %>
        <div class='sport-card card'>
          <div><%= s.name %></div>
          <p>Lorem ipsum blablablablab</p>
          <%= link_to 'VIEW ROUTINE', routine_path(s), class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
    <% end %>
    <%= link_to 'CREATE NEW ROUTINE', new_routine_path, class:'btn btn-primary' %>
</div>



<%= content_for(:after_js) do %>
  <script>
    $(document).ready(function(){
    $('.owl-carousel').owlCarousel({
        stagePadding: 50,
        loop: true,
        margin:10,
        responsive:{
          0:{
            items:1
          },
          600:{
          items:3
          }
        }
      })
    });
  </script>
<% end %>
