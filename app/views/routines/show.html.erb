<div class='container'>
  <h1><%= @routine.name %></h1>
  <%= @routine.description %>

  <p>This routine consists of all of these stretches: </p>
 <div class='row d-flex'>
    <% @stretches.each do |s| %>
      <%= link_to stretch_path(s) do %>
        <div class='col-lg-3 col-sm-3 card stretch-card'>
          <%= image_tag("firstyoga.png", class: "card-pic") %>
          <h3><%= s.name %></h3>
        </div>
      <% end %>
    <% end %>
</div>
