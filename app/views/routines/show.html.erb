<div class='container'>
  <div class='routine-head'>
    <div class="d-flex justify-content-between">
      <h1><%= @routine.name %></h1>
      <% if @routine.imageable_type == "User"%>
        <%= link_to routine_path(@routine),method: :delete, data: { confirm: "Are you sure?" }, class: "delete-button" do%>
        <i class="fa-solid fa-trash"></i>
        <% end %>
      <% end %>
    </div>
    <%= @routine.description %>
    <div>
      <%= link_to 'start!', routine_routinestart_path(@routine), class:'btn btn-primary w-100' %>
    </div>
  </div>
 <div class='row'>
    <% @stretches.each do |s| %>
      <%= link_to stretch_path(s), class: 'col-6 card stretch-card' do %>
          <%= image_tag("#{s.photo}", class: "card-pic") %>
          <h4 class='text-center'><%= s.name %></h4>
      <% end %>
    <% end %>
</div>
