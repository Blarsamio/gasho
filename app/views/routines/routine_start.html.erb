<% content_for :nonav, render('shared/nofoot') %>

<div class="car-container">
  <div class='container'>
  <div class='content-big' data-controller="routine-start" data-routine-start-count-value="<%= @stretches.count %>">
    <div class="base-timer" data-routine-start-target="counter">
      <svg class="base-timer__svg" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <g class="base-timer__circle">
          <circle class="base-timer__path-elapsed" cx="50" cy="50" r="45" />
          <path
            data-routine-start-target="color"
            id="base-timer-path-remaining"
            stroke-dasharray="283"
            class="base-timer__path-remaining blue"
            d="
              M 50, 50
              m -45, 0
              a 45,45 0 1,0 90,0
              a 45,45 0 1,0 -90,0
            "
          ></path>
        </g>
      </svg>
      <span data-routine-start-target="timer" class="base-timer__label">
        <!-- Remaining time label -->
      </span>
    </div>
    <div id="carouselExampleSlidesOnly" class="vertical carousel slide" data-routine-start-target="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class='card routine-start-head'>
            <h2 class='head-start' style='color: white; font-size: 46px;'>Are you <br><span style='color: #55A4BA'>ready?</span></h2>
          </div>
        </div>
        <% @stretches.each do |stretch| %>
          <div class='carousel-item over-big'>
            <div class='routine-container-timer' data-routine-start-duration-value="<%= stretch.duration %>">
              <div class='container'>
                <div class='content'>
                  <div class='over'><span><h4 class='text-center'><%= stretch.name %></h4></span></div>
                  <img src= <%= stretch.photo %> class="stretch-img" alt="...">
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="carousel-item">
          <div class='card routine-end-head'>
            <h2 style='color: white; font-size: 45px;'>Great job!</h2>
            <p style='color: #55A4BA; font-size: 28px;'>Rate this routine:</p>
            <br>
            <p style='color: white; font-size: 24px;'>Difficulty:</p>
            <fieldset class="form-group check_boxes optional snippet_tags">
              <input type="hidden" name="snippet[tag_ids][]" value="">
              <div class="tag-item">
                <input class="form-check-input check_boxes optional tag-selector" type="checkbox" value="1" name="snippet[tag_ids][]" id="snippet_tag_ids_1">
                <label class="form-check-label collection_check_boxes" for="snippet_tag_ids_1">Too easy</label>
              </div>
              <div class="tag-item">
                <input class="form-check-input check_boxes optional tag-selector" type="checkbox" value="2" name="snippet[tag_ids][]" id="snippet_tag_ids_2">
                <label class="form-check-label collection_check_boxes" for="snippet_tag_ids_2">Just right</label>
              </div>
              <div class="tag-item">
                <input class="form-check-input check_boxes optional tag-selector" type="checkbox" value="3" name="snippet[tag_ids][]" id="snippet_tag_ids_3">
                <label class="form-check-label collection_check_boxes" for="snippet_tag_ids_3">Too difficult</label>
              </div>
            </fieldset>
            <p style='color: white; font-size: 24px;'>Length:</p>
            <fieldset class="form-group check_boxes optional snippet_tags">
              <input type="hidden" name="snippet[tag_ids][]" value="">
              <div class="tag-item">
                <input class="form-check-input check_boxes optional tag-selector" type="checkbox" value="1" name="snippet[tag_ids][]" id="snippet_tag_ids_4">
                <label class="form-check-label collection_check_boxes" for="snippet_tag_ids_4">Too short</label>
              </div>
              <div class="tag-item">
                <input class="form-check-input check_boxes optional tag-selector" type="checkbox" value="2" name="snippet[tag_ids][]" id="snippet_tag_ids_5">
                <label class="form-check-label collection_check_boxes" for="snippet_tag_ids_5">Just right</label>
              </div>
              <div class="tag-item">
                <input class="form-check-input check_boxes optional tag-selector" type="checkbox" value="3" name="snippet[tag_ids][]" id="snippet_tag_ids_6">
                <label class="form-check-label collection_check_boxes" for="snippet_tag_ids_6">Too long</label>
              </div>
            </fieldset>
            <div class='d-flex justify-content-around pt-3'>
            <%= link_to 'submit', home_path, style: 'color: #55A4BA' %>
            <%= link_to 'skip', home_path, style: 'color: #55A4BA' %>
          </div>
        </div>
      </div>
    </div>
    <%# <%= audio_tag("https://cdn.pixabay.com/download/audio/2022/03/09/audio_97e49df2bd.mp3?filename=freezing-night-28066.mp3", autoplay: true, controls: true) %>
  </div>
  </div>
</div>
